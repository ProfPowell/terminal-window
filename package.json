{
  "name": "@profpowell/terminal-window",
  "version": "2.0.0",
  "description": "A vanilla JavaScript web component for simulating terminal consoles with customizable commands, themes, and typing effects. Perfect for tutorials, documentation, and interactive demos.",
  "type": "module",
  "main": "dist/terminal-window.js",
  "module": "dist/terminal-window.js",
  "types": "terminal-window.d.ts",
  "exports": {
    ".": {
      "types": "./terminal-window.d.ts",
      "import": "./dist/terminal-window.js",
      "default": "./dist/terminal-window.js"
    }
  },
  "files": [
    "dist",
    "src/terminal-window.js",
    "terminal-window.d.ts",
    "custom-elements.json",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "sideEffects": [
    "./src/terminal-window.js",
    "./dist/terminal-window.js"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "analyze": "cem analyze --litelement",
    "prepublishOnly": "npm run build && npm run analyze"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProfPowell/terminal-window.git"
  },
  "keywords": [
    "web-component",
    "web-components",
    "custom-element",
    "terminal",
    "console",
    "simulation",
    "cli",
    "command-line",
    "shell",
    "tutorial",
    "demo",
    "vanilla-js",
    "no-dependencies"
  ],
  "author": "Thomas A. Powell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ProfPowell/terminal-window/issues"
  },
  "homepage": "https://github.com/ProfPowell/terminal-window#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.11.0",
    "@playwright/test": "^1.58.0",
    "eslint": "^9.39.1",
    "prettier": "^3.8.1",
    "vite": "^7.2.6"
  },
  "customElements": "custom-elements.json"
}
